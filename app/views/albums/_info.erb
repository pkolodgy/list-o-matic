<% @JSONresults = album.get_album_info %>

<% @album_info = @JSONresults["results"].first %>

<% if @album_info %>
  <img class="album-img" src="<%= @album_info["thumb"]%>">
  <div class="album-info">
    <p class="title"><%= @album_info["title"] %></p>
    <p><%= @album_info["year"] %> | <%= @album_info["label"][0] %> | <%= @album_info["genre"].first %> | <%= @album_info["style"].first %></p>
    <p><%= points %> points</p>
    <p>Voted by: <%= album.voters.all.pluck(:username).to_a.join(', ') %></p>
  </div>
<% end %>
